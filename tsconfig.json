{
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "es2015", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": false,
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "validProperties": [
            "text-decoration-thickness",
            "text-underline-offset"
          ]
        }
      }
    ]
  },
  "exclude": ["node_modules", "public", ".cache", "extensions", "coverage"],
  "include": ["*.ts", "**/*.ts", "**/*.tsx", "**/*.js", "**/d.ts"]
}
